<h2>Featured recipes</h2>

<div id="recipes-container">
  <% @recipes.each do |recipe| %>
      <div class="recipe-item">
        <% if recipe.photos.any? %>
          <%= image_tag recipe.photos.first.image %>
        <% end %>

        <div class="overlay">
          <h3><%= recipe.title %></h3>
          <%= recipe.subtitle %>
        </div>
      </div>
  <% end %>




