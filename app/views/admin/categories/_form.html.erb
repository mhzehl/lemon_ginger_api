<%= form_for [:admin, @category], html: { multipart: true } do |f| %>

    <div class="form-group">
      <h2>Nieuwe Categorie</h2>
    </div>

    <div class="form-group">
      <label>Naam categorie</label>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Opslaan", class: "btn btn-primary btn-lg" %>
    </div>

<% end %>
