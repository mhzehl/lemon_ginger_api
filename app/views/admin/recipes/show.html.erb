<div class="recipe-container">
  <div class="title">
    <h2><%= @recipe.title %></h2>
    <%= link_to "Edit", edit_admin_recipe_path(@recipe) %>
  </div>
  <p><%= @recipe.subtitle %></p>

  <hr>

  <h3>Algemeen</h3>
  <p><%= @recipe.intro %></p>
  <div class="general time-persons">
    <p class="general time"><span class="glyphicon glyphicon-time" aria-hidden="true"></span> <%= @recipe.cooking_time %> minuten</p>
    <p class="general persons"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> <%= @recipe.persons %> personen</p>
  </div>
  <div class="photos">
    <% @recipe.photos.each do |photo| %>
      <%= image_tag photo.image_url(:thumb) %>
    <% end %>
  </div>

  <hr>

  <h3>IngrediÃ«nten</h3>
  <ul>
  <% @recipe.ingredients.each do |ingredient| %>
    <li>
      <%= ingredient.amount %>
      <%= ingredient.product.name %>
    </li>
  <% end %>
  </ul>

  <hr>

  <h3>Bereidingsstappen</h3>
  <ol>
    <% @recipe.cooking_steps.each do |cooking_step| %>
      <li>
        <%= cooking_step.title %>
        <%= cooking_step.description %>
        <%= cooking_step.cooking_time %>
      </li>
    <% end %>
  </ol>
</div>
