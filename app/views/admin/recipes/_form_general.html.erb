<%= form_for [:admin, @recipe] do |f| %>

  <div class="form-group">
    <h2>Algemeen</h2>
  </div>

  <div class="form-group">
    <label>Titel</label>
    <%= f.text_field :title, placeholder: "Recept naam", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Ondertitel</label>
    <%= f.text_field :subtitle, class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Beschrijving</label>
    <%= f.text_area :intro, placeholder: "Type hier een korte omschrijving...", class: "form-control intro" %>
  </div>

  <div class="form-group time-person">
    <div class="cooking-time">
      <label>Bereidingstijd</label>
        <div class="time">
          <%= f.number_field :cooking_time, class: "form-control" %>
          <span>minuten</span>
        </div>
    </div>
    <div class="amount-people">
      <label>Aantal personen</label>
        <div class="people">
          <%= f.number_field :persons, class: "form-control" %>
          <span>personen</span>
        </div>
    </div>
  </div>

  <div class="form-group">
    <label>Photos</label>
    <div class="photos">
      <span class="btn btn-default">
        <%= file_field_tag "photos[]", type: :file, multiple: true %>
      </div>
    </span>
  </div>

  <hr>

  <div class="form-group">
    <h2>Ingrediënten</h2>
  </div>

  <%= f.fields_for :ingredients do |i| %>

    <div>
      <div class="form-group ingredients">
        <div class="quantity">
          <label>Hoeveelheid</label>
          <div class="ingredient-qnt">
            <%= i.text_field :amount, class: "form-control" %>
          </div>
        </div>
        <div class="ingredient-name">
          <label>Naam</label>
          <div class="name">
            <%= i.select(:product_id, Product.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }) %>
          </div>
        </div>
        <div class="optional">
          <label>Optioneel?</label>
          <%= i.check_box :optional, class: "form-control" %>
        </div>
      </div>
    </div>
    <span>+ Voeg Ingrediënt toe</span>

    <hr>

  <% end %>

  <%= f.fields_for :cooking_steps do |c| %>

    <div class="form-group">
      <h2>Bereidingsstappen</h2>
    </div>

    <div class="form-group">
      <label>Naam stap</label>
      <%= c.text_field :title, placeholder: "Stap", class: "form-control" %>
    </div>
    <div class="form-group">
      <label>Beschrijving</label>
      <%= c.text_area :description, placeholder: "Type hier een korte omschrijving...", class: "form-control intro" %>
    </div>
    <div class="form-group">
      <label>Bereidingstijd</label>
      <%= c.number_field :cooking_time, class: "form-control" %>
    </div>
    <span>+ Add Cooking Step</span>

    <hr>

  <% end %>

  <div class="actions">
    <%= f.submit "Opslaan", class: "btn btn-primary btn-lg" %>
  </div>

<% end %>
