<div class="nested-fields">
  <div class="form-group">
    <label>Naam stap</label>
    <%= f.text_field :title, placeholder: "Stap", class: "form-control" %>
  </div>
  <div class="form-group">
    <label>Beschrijving</label>
    <%= f.text_area :description, placeholder: "Type hier een korte omschrijving...", class: "form-control intro" %>
  </div>
  <div class="form-group step">
    <div class="time cookingstep">
      <label>Bereidingstijd</label>
      <div class="time">
        <%= f.number_field :cooking_time, class: "form-control" %>
        <span>minuten</span>
      </div>
    </div>
    <div class="remove">
      <%= link_to_remove_association "Verwijder", f %>
    </div>
  </div>
</div>
